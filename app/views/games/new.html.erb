
<div>
 <h1 class="m-3">New game</h1>
  <div class = "p-3 ">
    <ul class = "p-3 list-group list-group-horizontal justify-content-center">
      <% @letters.each do |letter| %>
        <li class = "p-3 mx-4 bg-primary border list-group-item text-white text-center rounded"><strong><%= letter %></strong></li>
      <% end %>
    </ul>
  </div>
</div>

<div class = "text-center m-4 p-4" >
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="questions" placeholder ="Enter the word here">
    <input id = "button" type="submit" value="Play">

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
